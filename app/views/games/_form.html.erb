  <p><%= f.label :scenario %>: <%= collection_select(:game, :scenario_id, Scenario.all, :id, :code) %></p>
  <p><%= f.label :player1 %>: <%= collection_select(:game, :player1_id, Player.all, :id, :handle) %></p>
  <p><%= f.label :faction1 %>: <%= collection_select(:game, :faction1_id, Faction.all, :id, :name) %></p>
  <p><%= f.label :player2 %>: <%= collection_select(:game, :player2_id, Player.all, :id, :handle) %></p>
  <p><%= f.label :faction2 %>: <%= collection_select(:game, :faction2_id, Faction.all, :id, :name) %></p>
  <p><%= f.label :winner %>: <%= collection_select(:game, :winner_id, Player.all, :id, :handle) %></p>
  <div class="actions">
    <%= f.submit %>
  </div>
<% end %>

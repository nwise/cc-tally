<h2>Player List</h2>

<table>
  <tr>
    <th>Handle</th>
    <th>First Name</th>
    <th>Last Name</th>
    <th>Wins</th>
    <th></th>
  </tr>

<% @players.each do |player| %>
  <tr>
    <td><%= player.handle %></td>
    <td><%= player.first_name %></td>
    <td><%= player.last_name %></td>
    <td><%= Game.wins_for_player(player) %></td>
    <td><%= link_to 'Edit', edit_player_path(player) %><br>
        <%= button_to "Delete", 
                    {:action => :destroy, :id => player.id}, 
                    :confirm => "Are you sure?", :method => :delete %></td>
  </tr>
<% end %>
</table>

<br />

